[
	// ============================================================
	// 窗口与视图管理 (Window & View Management)
	// ============================================================
	// 编辑器组焦点切换
	{
		"key": "cmd+1",
		"command": "-workbench.action.focusFirstEditorGroup",
	},
	{
		"key": "cmd+2",
		"command": "-workbench.action.focusSecondEditorGroup",
	},
	{
		"key": "cmd+3",
		"command": "-workbench.action.focusThirdEditorGroup",
	},
	// 侧边栏/面板切换
	{
		"key": "alt+q",
		"command": "workbench.action.toggleSidebarVisibility",
	},
	// {
	// 	"key": ", t",
	// 	"command": "workbench.action.terminal.toggleTerminal",
	// },
	// 编辑器标签页切换
	{
		"key": "alt+=",
		"command": "workbench.action.nextEditor",
	},
	{
		"key": "alt+-",
		"command": "workbench.action.previousEditor",
	},
	// 新建/欢迎页
	{
		"key": "cmd+n",
		"command": "welcome.showNewFileEntries",
	},
	// ============================================================
	// 代码导航 (Code Navigation)
	// ============================================================
	// 定义/实现跳转
	{
		"key": "cmd+f12",
		"command": "-editor.action.revealDefinition",
		"when": "editorHasDefinitionProvider && editorTextFocus && isWeb",
	},
	{
		"key": "cmd+f12",
		"command": "-editor.action.goToImplementation",
		"when": "editorHasImplementationProvider && editorTextFocus",
	},
	{
		"key": "cmd+f12",
		"command": "workbench.profiles.actions.exportProfile",
	},
	// AceJump / FindThenJump 快速跳转
	{
		"key": "cmd+i",
		"command": "extension.aceJump",
	},
	{
		"key": "cmd+i",
		"command": "findThenJump.initiate",
	},
	// 错误/警告跳转
	{
		"key": "cmd+1",
		"command": "editor.action.marker.nextInFiles",
		"when": "editorFocus",
	},
	// ============================================================
	// 代码编辑 (Code Editing)
	// ============================================================
	// 格式化文档
	{
		"key": "cmd+2",
		"command": "editor.action.formatDocument",
		"when": "editorHasDocumentFormattingProvider && editorTextFocus && !editorReadonly && !inCompositeEditor",
	},
	{
		"key": "shift+alt+f",
		"command": "-editor.action.formatDocument",
		"when": "editorHasDocumentFormattingProvider && editorTextFocus && !editorReadonly && !inCompositeEditor",
	},
	// 查找与替换
	{
		"key": "cmd+r",
		"command": "editor.action.startFindReplaceAction",
		"when": "editorFocus || editorIsOpen",
	},
	{
		"key": "alt+cmd+f",
		"command": "-editor.action.startFindReplaceAction",
		"when": "editorFocus || editorIsOpen",
	},
	{
		"key": "shift+cmd+h",
		"command": "-workbench.action.replaceInFiles",
	},
	{
		"key": "ctrl+d",
		"command": "editor.action.addSelectionToNextFindMatch",
		"when": "editorFocus",
	},
	// 行操作
	{
		"key": "cmd+d",
		"command": "editor.action.copyLinesDownAction",
		"when": "editorTextFocus && !editorReadonly",
	},
	{
		"key": "alt+j",
		"command": "editor.action.moveLinesDownAction",
		"when": "vim.mode != 'Insert' && editorTextFocus",
	},
	{
		"key": "alt+k",
		"command": "editor.action.moveLinesUpAction",
		"when": "vim.mode != 'Insert' && editorTextFocus",
	},
	// 代码补全与建议
	{
		"key": "enter",
		"command": "editor.action.inlineSuggest.commit",
		"when": "inlineSuggestionVisible && !suggestWidgetVisible",
	},
	{
		"key": "tab",
		"command": "-editor.action.inlineSuggest.commit",
		"when": "inlineSuggestionVisible && !suggestWidgetVisible",
	},
	{
		"key": "tab",
		"command": "acceptSelectedSuggestion",
		"when": "suggestWidgetVisible",
	},
	{
		"key": "ctrl+enter",
		"command": "-github.copilot.generate",
		"when": "editorTextFocus && github.copilot.activated && !commentEditorFocused && !inInteractiveInput && !interactiveEditorFocused",
	},
	// ============================================================
	// Vim 集成与模拟 (Vim Integration)
	// ============================================================
	// Insert 模式：Option+d 删除当前行
	{
		"key": "alt+d",
		"command": "vim.remap",
		"when": "vim.mode == 'Insert'",
		"args": {
			"after": [
				"<Esc>",
				"c",
				"c",
			],
		},
	},
	// Normal 模式：Option+z 居中显示
	{
		"key": "alt+z",
		"command": "vim.remap",
		"when": "vim.mode == 'Normal'",
		"args": {
			"after": [
				"G",
				"z",
				"z",
			],
		},
	},
	// Visual Block 模式 (Option+V)
	{
		"key": "alt+v",
		"command": "vim.remap",
		"args": {
			"after": [
				"<C-v>",
			],
		},
	},
	{
		"key": "alt+v",
		"command": "-editor.action.clipboardPasteAction",
	},
	// 行首/行尾跳转 (Option+H/L)
	{
		"key": "alt+h",
		"command": "vim.remap",
		"when": "vim.mode == 'Normal'",
		"args": {
			"after": [
				"^",
			],
		},
	},
	{
		"key": "alt+l",
		"command": "vim.remap",
		"when": "vim.mode == 'Normal'",
		"args": {
			"after": [
				"$",
			],
		},
	},
	// EasyMotion 快捷键
	// {
	// 	"key": ", s",
	// 	"command": "vim.remap",
	// 	"when": "vim.mode == 'Normal'",
	// 	"args": {
	// 		"after": [
	// 			"<leader>",
	// 			"<leader>",
	// 			"s",
	// 		],
	// 	},
	// },
	// Ctrl+D 清除行并进入插入模式
	{
		"key": "ctrl+d",
		"command": "vim.remap",
		"when": "vim.mode == 'Normal'",
		"args": {
			"after": [
				"c",
				"c",
			],
		},
	},
	{
		"key": "ctrl+d",
		"command": "vim.remap",
		"when": "vim.mode == 'Insert'",
		"args": {
			"after": [
				"<Esc>",
				"c",
				"c",
			],
		},
	},
	// ============================================================
	// 扩展插件 (Extensions)
	// ============================================================
	// Live Server
	{
		"key": "cmd+l cmd+o",
		"command": "-extension.liveServer.goOnline",
		"when": "editorTextFocus",
	},
	{
		"key": "cmd+l cmd+c",
		"command": "-extension.liveServer.goOffline",
		"when": "editorTextFocus",
	},
	{
		"key": "delete",
		"command": "fiveServer.start"
	},
	{
		"key": "cmd+3",
		"command": "extension.liveServer.goOnline"
	}
]