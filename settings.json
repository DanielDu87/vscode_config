{
	// ============================================================
	// Vim 插件配置
	// ============================================================
	//
	// 注意：按键映射已迁移到 ~/.vimrc 文件
	// VSCode Vim 插件会自动读取该文件中的配置
	//
	// .vimrc 中包含：
	//   - Leader 键设置
	//   - 基础快捷键映射（空格、Ctrl+k/j）
	//   - 文本对象映射（ciq/ciw/yiq/yiw）
	//   - 移动行/选中区域（Option+j/k）
	//   - 窗口管理（leader+w- 系列）
	//   - Buffer 管理（leader+b 系列）
	//   - Git 相关（leader+g 系列）
	//   - 搜索相关（leader+s 系列）
	//   - 其他实用快捷键
	//
	// 驼峰命名移动（ciW, caW 等命令支持驼峰）
	"vim.camelCaseMotion.enable": true,
	// 不同模式的光标样式
	"vim.cursorStylePerMode": {
		"insert": "line", // 插入模式：线形光标
		"normal": "block", // 普通模式：块形光标
		"replace": "underline", // 替换模式：下划线
		"visual": "block", // 可视模式：块形光标
		"visualblock": "block", // 块可视：块形光标
		"visualline": "block" // 行可视：块形光标
	},
	// 启用 EasyMotion 快速跳转插件
	"vim.easymotion": true,
	// 使用 Neovim 作为后端（性能更好）
	"vim.enableNeovim": true,
	// 高亮复制内容
	"vim.highlightedyank.enable": true,
	// 鼠标选择不进入可视模式
	"vim.mouseSelectionGoesIntoVisualMode": false,
	// 寄存器增强功能
	"vim.replaceWithRegister": true,
	// 启用 Sneak 快速跳转（s{char}{char}）
	"vim.sneak": true,
	// Sneak 忽略大小写智能匹配
	"vim.sneakUseIgnorecaseAndSmartcase": true,
	// 相对行号智能显示
	"vim.smartRelativeLine": true,
	// 使用外部 .vimrc 配置文件
	"vim.vimrc.enable": true,
	"vim.vimrc.path": "/Users/dyx/.vimrc",
	// 按键处理控制（Option 键）
	"vim.handleKeys": {
		"<C-v>": true, // Ctrl+V 用于 Visual Block 模式
		"<C-c>": false, // Ctrl+C 保持 VSCode 原生功能
		"<C-f>": false, // Ctrl+F 保持搜索
		"<A-v>": false, // Option+V 交给 keybindings.json 处理
		"<A-h>": false, // Option+H 交给 keybindings.json 处理
		"<A-l>": false // Option+L 交给 keybindings.json 处理
	},
	// ---------- 自定义文本对象 ----------
	"vim.textobjKeybindings": [
		{
			"before": ["iq"],
			"after": ["i", "\""]
		},
		{
			"before": ["ie"],
			"after": ["i", "'"]
		},
		{
			"before": ["ib"],
			"after": ["i", "("]
		}
	],
	// ---------- 自动切换输入法 ----------
	"vim.autoSwitchInputMethod.enable": true,
	"vim.autoSwitchInputMethod.defaultIM": "com.apple.keylayout.ABC",
	"vim.autoSwitchInputMethod.obtainIMCmd": "/opt/homebrew/bin/im-select",
	"vim.autoSwitchInputMethod.switchIMCmd": "/opt/homebrew/bin/im-select {im}",
	// ---------- 输入法切换插件配置 ----------
	"ime-and-cursor.ChineseIM": "com.apple.inputmethod.SCIM.ITABC",
	"ime-and-cursor.EnglishIM": "com.apple.keylayout.ABC",
	"ime-and-cursor.obtainIMCmd": "/opt/homebrew/bin/im-select",
	"ime-and-cursor.switchIMCmd": "/opt/homebrew/bin/im-select {im}",
	// ============================================================
	// 编辑器基础配置
	// ============================================================
	// 无障碍支持（优化屏幕阅读器体验）
	"editor.accessibilitySupport": "off",
	"editor.allowVariableFontsInAccessibilityMode": true,
	// 粘贴时自动缩进
	"editor.autoIndentOnPaste": true,
	// 焦点变化时触发代码操作
	"editor.codeActions.triggerOnFocusChange": true,
	// 光标平滑动画
	"editor.cursorSmoothCaretAnimation": "on",
	// 光标周围保留行数（保持上下文可见）
	"editor.cursorSurroundingLines": 10,
	// 定义链接以预览方式打开（不跳转）
	"editor.definitionLinkOpensInPeek": true,
	// 不自动检测缩进（使用固定配置）
	"editor.detectIndentation": false,
	// GPU 加速（提升渲染性能）
	"editor.experimentalGpuAcceleration": "on",
	// 启用内联编辑
	"editor.experimentalInlineEdit.enabled": true,
	// 默认折叠 import 语句
	"editor.foldingImportsByDefault": true,
	// ---------- 字体配置 ----------
	"editor.fontFamily": "'JetBrains Mono', 'PingFang SC', 'Menlo', 'Monaco', 'Courier New', monospace",
	"editor.fontSize": 13,
	"editor.fontLigatures": true, // 连字（如 => 显示为 →）
	"editor.fontWeight": "700",
	// ---------- 格式化配置 ----------
	"editor.formatOnPaste": true, // 粘贴时自动格式化
	"editor.formatOnSave": true, // 保存时自动格式化
	"editor.formatOnSaveMode": "file",
	"editor.formatOnType": true, // 输入时自动格式化
	// ---------- 界面配置 ----------
	"editor.glyphMargin": false, // 禁用字形边距
	"editor.inertialScroll": true, // 惯性滚动
	"editor.insertSpaces": false, // 使用 Tab 而非空格缩进
	"editor.inlayHints.maximumLength": 120,
	"editor.lineNumbers": "relative", // 相对行号（Vim 模式推荐）
	"editor.minimap.enabled": false, // 禁用小地图
	"editor.overtypeCursorStyle": "line",
	// 标尺线（第 180 列）
	"editor.rulers": [
		180
	],
	"editor.selectionHighlightMultiline": true, // 多行选择高亮
	"editor.smoothScrolling": true, // 平滑滚动
	"editor.stablePeek": true,
	// ---------- 注释样式（去除斜体） ----------
	"editor.tokenColorCustomizations": {
		"textMateRules": [
			{
				"scope": "comment",
				"settings": {
					"fontStyle": ""
				}
			}
		]
	},
	// ---------- Unicode 高亮 ----------
	"editor.unicodeHighlight.includeComments": false, // 注释中不警告非 ASCII 字符
	"editor.unicodeHighlight.nonBasicASCII": false,
	// ---------- 自动换行 ----------
	"editor.wordWrap": "bounded", // 在视口边界换行
	// ============================================================
	// 工作区与界面配置
	// ============================================================
	// ---------- 资源管理器 ----------
	"explorer.compactFolders": false, // 禁用紧凑文件夹显示
	"explorer.decorations.colors": false, // 禁用装饰颜色
	// ---------- 文件配置 ----------
	"files.autoSave": "afterDelay", // 延迟自动保存
	"files.autoSaveDelay": 10, // 10 秒延迟
	"files.exclude": {
		"**/.idea": true // 隐藏 .idea 目录
	},
	// ---------- 窗口配置 ----------
	"window.autoDetectHighContrast": false,
	"window.newWindowProfile": "默认",
	// ---------- 主题与外观 ----------
	"workbench.colorTheme": "Atom One Dark",
	"workbench.preferredDarkColorTheme": "Atom One Dark",
	"workbench.iconTheme": "a-file-icon-vscode",
	"workbench.colorCustomizations": {},
	// ---------- 编辑器标签页 ----------
	"workbench.editor.alwaysShowEditorActions": true,
	"workbench.editor.enablePreview": false, // 禁用预览模式（单击文件打开而非预览）
	"workbench.editor.highlightModifiedTabs": true, // 高亮已修改的标签
	"workbench.editor.preferHistoryBasedLanguageDetection": true,
	"workbench.editor.sharedViewState": true, // 共享视图状态
	"workbench.editor.wrapTabs": true, // 标签多行显示
	// ---------- 本地历史 ----------
	"workbench.localHistory.mergeWindow": 1, // 合并时间窗口（分钟）
	// ---------- 声音设置 ----------
	"workbench.enableSounds": false, // 关闭所有声音
	"workbench.sounds.volume": 0, // 音量设置为 0
	// ============================================================
	// 搜索与导航配置
	// ============================================================
	"search.actionsPosition": "auto", // 操作按钮位置自动
	"search.collapseResults": "auto", // 自动折叠搜索结果
	"search.defaultViewMode": "tree", // 默认树形视图
	"search.exclude": {
		"**/.git": true,
		"**/.idea": true
	},
	"search.experimental.closedNotebookRichContentResults": true,
	"search.globalFindClipboard": true, // 使用全局查找剪贴板
	"search.quickOpen.includeSymbols": true, // 快速打开包含符号
	// ============================================================
	// 调试配置
	// ============================================================
	"debug.allowBreakpointsEverywhere": true, // 允许在任何位置设置断点
	"debug.autoExpandLazyVariables": "on", // 自动展开延迟变量
	"debug.closeReadonlyTabsOnEnd": true, // 调试结束时关闭只读标签
	"debug.confirmOnExit": "always", // 退出时始终确认
	"debug.console.acceptSuggestionOnEnter": "on", // 回车接受控制台建议
	"debug.console.closeOnEnd": true, // 调试结束时关闭控制台
	// ============================================================
	// Git 与版本控制
	// ============================================================
	"git.openRepositoryInParentFolders": "always", // 在父文件夹中打开仓库
	"scm.alwaysShowRepositories": true, // 始终显示仓库面板
	"scm.autoReveal": false, // 不自动滚动到变更文件
	// ============================================================
	// 代码格式化配置
	// ============================================================
	// ---------- Prettier ----------
	"prettier.bracketSameLine": true, // > 符号与标签同行
	"prettier.configPath": "prettier.config.js",
	"prettier.endOfLine": "auto",
	"prettier.experimentalTernaries": true, // 实验性三元运算符格式化
	"prettier.requireConfig": true, // 要求存在配置文件才格式化
	// ---------- ESLint ----------
	"eslint.debug": true,
	"eslint.format.enable": false, // 禁用 ESLint 格式化（只用 Prettier）
	"eslint.validate": [
		"javascript",
		"javascriptreact",
		"typescript",
		"typescriptreact"
	],
	// ---------- Standard ----------
	"standard.autoFixOnSave": true,
	"standard.enableGlobally": true,
	// ---------- 保存时自动修复 ----------
	"editor.codeActionsOnSave": {
		"source.fixAll": "always"
	},
	// ---------- 语言特定格式化器 ----------
	"[css]": {
		"editor.defaultFormatter": "vscode.css-language-features"
	},
	"[html]": {
		"editor.defaultFormatter": "vscode.html-language-features"
	},
	"[javascript]": {
		"editor.defaultFormatter": "vscode.typescript-language-features"
	},
	"[json]": {
		"editor.defaultFormatter": "vscode.json-language-features"
	},
	"[jsonc]": {
		"editor.defaultFormatter": "vscode.json-language-features"
	},
	// ---------- HTML 格式化 ----------
	"html.format.extraLiners": " ", // 在标签前额外空行
	"html.format.indentHandlebars": true, // 缩进 Handlebars
	"html.format.indentInnerHtml": true, // 缩进内部 HTML
	"html.format.templating": true, // 启用模板语法支持
	// ============================================================
	// Web 前端开发
	// ============================================================
	// ---------- CSS ----------
	"css.autoValidation": "Always",
	"css.enabledLanguages": [
		"html"
	],
	"css.styleSheets": [
		"src/**/*.css"
	], // CSS 样式表路径
	// ---------- Emmet ----------
	"emmet.showSuggestionsAsSnippets": true, // 将 Emmet 显示为代码片段
	"emmet.triggerExpansionOnTab": true, // Tab 键触发 Emmet 展开
	// ---------- HTML/CSS 类名补全 ----------
	"html-css-class-completion.enableEmmetSupport": true,
	// ---------- Tailwind CSS ----------
	"tailwindCSS.emmetCompletions": true, // Tailwind Emmet 补全
	// ---------- Live Server ----------
	"liveServer.settings.AdvanceCustomBrowserCmdLine": "/Applications/Google Chrome Beta.app --new-window",
	"liveServer.settings.CustomBrowser": "chrome:PrivateMode",
	"liveServer.settings.fullReload": true, // 完整重载（非热更新）
	// ============================================================
	// Python 开发
	// ============================================================
	"python.analysis.typeCheckingMode": "standard", // 类型检查模式：standard
	"python.defaultInterpreterPath": "/Users/dyx/Code/0.python-venv/mySite-django5.0-py3.12/bin/python3",
	// ============================================================
	// 终端配置
	// ============================================================
	"terminal.integrated.fontFamily": "CodeNewRoman Nerd Font Mono",
	"terminal.integrated.fontSize": 16,
	"terminal.integrated.fontWeight": "normal",
	// ============================================================
	// 安全与隐私
	// ============================================================
	"security.promptForLocalFileProtocolHandling": false, // 不提示本地文件协议处理
	"security.workspace.trust.untrustedFiles": "open", // 直接打开不受信任的文件
	// ============================================================
	// AI 辅助功能
	// ============================================================
	"editor.aiStats.enabled": true, // AI 统计启用
	"editor.experimental.asyncTokenizationLogging": true, // 异步分词日志
	"editor.bracketPairColorization.independentColorPoolPerBracketType": true, // 括号配对独立颜色池
	// ============================================================
	// 网络代理
	// ============================================================
	"http.proxy": "http://127.0.0.1:7890",
	"markdown-preview-enhanced.HTML5EmbedUseImageSyntax": false
}