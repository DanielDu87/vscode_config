{
	// ============================================================
	// Vim 插件核心配置
	// ============================================================
	// 注意：部分按键映射已迁移到 ~/.vimrc 文件
	// VSCode Vim 插件会自动读取该文件中的配置
	"vim.vimrc.enable": true,
	"vim.vimrc.path": "/Users/dyx/.vimrc",
	// 显式设置 Leader 键为空格
	"vim.leader": " ",
	// 使用 Neovim 作为后端（关闭以保持原生稳定）	"vim.enableNeovim": false,
	// 启用 EasyMotion 快速跳转插件
	"vim.easymotion": true,
	// 启用 Sneak 快速跳转（s{char}{char}）
	"vim.sneak": true,
	"vim.sneakUseIgnorecaseAndSmartcase": true,
	// 驼峰命名移动支持（ciW, caW 等）
	"vim.camelCaseMotion.enable": true,
	// 寄存器增强功能（替换时保留寄存器内容）
	"vim.replaceWithRegister": true,
	// 高亮复制的内容
	"vim.highlightedyank.enable": true,
	// 鼠标选择不自动进入可视模式
	"vim.mouseSelectionGoesIntoVisualMode": false,
	// 相对行号智能显示（Vim 模式必备）
	"vim.smartRelativeLine": true,
	// 光标样式配置（随模式变化）
	"vim.cursorStylePerMode": {
		"insert": "line",
		"normal": "block",
		"replace": "underline",
		"visual": "block",
		"visualblock": "block",
		"visualline": "block",
	},
	// 按键拦截控制（决定由 VSCode 还是 Vim 处理）
	"vim.handleKeys": {
		"<C-v>": true,
		"<C-c>": false,
		"<C-f>": false,
		"<A-v>": false,
		"<A-h>": false,
		"<A-l>": false,
	},
	// 自定义文本对象映射
	"vim.textobjKeybindings": [
		{
			"before": ["iq"],
			"after": ["i", "\""],
		},
		{
			"before": ["ie"],
			"after": ["i", "'"],
		},
		{
			"before": ["ib"],
			"after": ["i", "("],
		},
	],
	// Normal 模式快捷键映射
	"vim.normalModeKeyBindingsNonRecursive": [
		{
			"before": ["s"],
			"after": ["<leader>", "<leader>", "s"],
		},
	],
	// ============================================================
	// 编辑器基础配置 (Editor)
	// ============================================================
	// 字体设置
	"editor.fontFamily": "'JetBrains Mono', 'PingFang SC', 'Menlo', 'Monaco', 'Courier New', monospace",
