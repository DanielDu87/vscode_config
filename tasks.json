{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "使用Arc打开(自定义端口)",
			"type": "shell",
			"command": "open",
			"args": ["-a", "Arc", "http://localhost:${input:port}"],
			"problemMatcher": [],
		},
		{
			"label": "生成tailwind.config.js",
			"type": "shell",
			"command": "[ -f tailwind.config.js ] || echo -e '/** @type {import(\"tailwindcss\").Config} */\\nmodule.exports = {\\n  content: [\"./**/*.{html,js,ts,jsx,tsx}\"],\\n  theme: {\\n    extend: {},\\n  },\\n  plugins: [],\\n}' > tailwind.config.js",
			"windows": {
				"command": "if not exist tailwind.config.js (echo./** @type {import(\"tailwindcss\").Config} */& echo.module.exports = {& echo.  content: [\"./**/*.{html,js,ts,jsx,tsx}\"],& echo.  theme: {\\n    extend: {},& echo.  },& echo.  plugins: [],& echo.}>tailwind.config.js)",
			},
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": false,
			},
			"presentation": {
				"reveal": "never",
				"panel": "shared",
			},
		},
	],
	"inputs": [
		{
			"id": "port",
			"description": "请输入端口号",
			"default": "8080",
			"type": "promptString",
		},
	],
}
